   padding: 30px 60px;
}
nav h1{
  border-bottom:4px solid  white;
  color: white;
}
nav ul{
  justify-content: space-around;
  display: flex;
  align-items: center;
  
}
nav li{
 color: white;
  list-style: none;
  padding-right: 30px;
}

nav a{
  color:white;
  text-decoration: none;
  font-weight: bold;
  padding: 5px 8px;
}

nav a:hover{
  color: white;
  border-bottom:4px solid  white;
}

        table{
            border-collapse: collapse;
            width:100%;
            
        }
        th,td{
            text-align: center;
            padding: 8px;
        }
        tr:nth-child(even){
            background-color: #f2f2f2;
        }
        th{
            background-color: rgb(3, 255, 200);
            color: white;
        }
        h2{
            padding: 20px;
            
            border-bottom:4px solid rgb(3, 255, 200);
            
        }

form{
  display: flex;
  
  align-items: center;
  padding: 10px 0; 
}

.reply textarea{
  border-radius: 5px;
  width: 180px;
  resize: none;
  outline: none;
  
}


.reply input[type='submit']{
  margin-left:10px ;
  outline: none;
  border: none;
  width: 100px;
  padding: 10px 10px;
  border-radius: 15px;
  background-color: rgb(22, 136, 230);
  color: white;
}
select{
  padding: 8px 12px;
  border-radius: 5px;
}
select option{
  background-color:rgb(3, 255, 200);
  color: white;
  margin: 10px;
}
label{
  padding: 12px 16px;

}
